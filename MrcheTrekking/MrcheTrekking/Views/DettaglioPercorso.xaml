<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="MrcheTrekking.Views.DettaglioPercorso"
             Title="{Binding Item.Nome}">
    <ContentPage.Content>
        <StackLayout>
            <Image Source="{Binding Item.Immagine}"></Image>
            <StackLayout HorizontalOptions="Fill" Margin="10">
                <Label Text="{Binding Item.Descrizione}"/>
                <Label Text="{Binding Item.Caratteristiche}"/>
                <Button Text="Mappa" Clicked="GoMappa" CornerRadius="20"  HeightRequest="38" BackgroundColor="#009900" TextColor="White"   />
                <Button x:Name="Recensione" Text="Recensione" Clicked="GoRecensioni" CornerRadius="20"  HeightRequest="38" BackgroundColor="#009900" TextColor="White"  />
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
