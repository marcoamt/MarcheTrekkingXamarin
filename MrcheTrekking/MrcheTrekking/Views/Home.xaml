<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MrcheTrekking.Views.Home">
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Logout" Clicked="Logout"/>
    </ContentPage.ToolbarItems>
    <StackLayout>
        <Label Text="Benvenuto" />
        <Label x:Name="User" />

        <Image Source="trekking.jpg" />
        <StackLayout>
            <Button Text="Percorsi" WidthRequest="300" HorizontalOptions="Center" Clicked="Percorsi"/>
            <Button Text="Inserisci Percorso" WidthRequest="300" HorizontalOptions="Center" Clicked="AggiungiPercorso"/>
            <Button Text="Recensioni" WidthRequest="300" HorizontalOptions="Center" Clicked="Recensioni"/>
            <Button Text="I miei percorsi" WidthRequest="300" HorizontalOptions="Center" Clicked="MieiPercorsi"/>
        </StackLayout>


    </StackLayout>
</ContentPage>