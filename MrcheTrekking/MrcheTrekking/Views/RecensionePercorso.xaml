<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="MrcheTrekking.Views.RecensionePercorso"
    Title="Recensioni percorso">
    <ContentPage.Content>
        <ListView  x:Name="lstView" ItemsSource="{Binding Recensioni}" RowHeight="100" >
			<ListView.ItemTemplate>
				<DataTemplate>
					<ViewCell>
                        <StackLayout HorizontalOptions="FillAndExpand" Margin="10">
                            <Label Text = "{Binding UserName}" FontSize="18"/>
                                <Label Text = "{Binding Recensione}" />
                        </StackLayout>
						<StackLayout Orientation="Horizontal" HorizontalOptions="Fill">
							<StackLayout Orientation="Vertical">
								<Label Text = "{Binding UserName}" FontSize="18" />
								<Label Text = "{Binding Recensione}" />
							</StackLayout>
						</StackLayout>
					</ViewCell>
				</DataTemplate>
			</ListView.ItemTemplate>
		</ListView>
    </ContentPage.Content>
</ContentPage>
