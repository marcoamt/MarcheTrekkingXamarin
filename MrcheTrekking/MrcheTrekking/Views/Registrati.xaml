<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MrcheTrekking.Views.Registrati" Title="Registrati">
  <ContentPage.Content>
        <StackLayout HorizontalOptions="Fill"  Margin="10">
          <Entry x:Name="nome" Placeholder="Nome"/>
            <Entry x:Name="cognome" Placeholder="Cognome"/>
            <Entry x:Name="email" Placeholder="E-mail"/>
            <Entry x:Name="username" Placeholder="Usename"/>
            <Entry x:Name="password" Placeholder="Password" IsPassword="True"/>
            <Entry x:Name="telefono" Placeholder="Telefono"/>
             <DatePicker x:Name="datadinascita"
                    Format="d"/>
            <Button Text="Registrati" Clicked="Reg" CornerRadius="20"  HeightRequest="38" BackgroundColor="#009900" TextColor="White"/>
      </StackLayout>
  </ContentPage.Content>
</ContentPage>